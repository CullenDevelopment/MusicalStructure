<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/PagesStyle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        tools:ignore="ContentDescription"
        android:layout_marginTop="@dimen/default_margin"/>

    <ImageView
        android:id="@+id/playing_now_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/default_padding"
        android:layout_below="@id/list_home_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/now_playing" />

    <ImageView
        android:id="@+id/list_classical_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/playing_now_button"
        android:layout_toLeftOf="@id/list_country_button"
        android:layout_toStartOf="@id/list_country_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/classical"/>

    <ImageView
        android:id="@+id/list_country_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/list_button_margin"
        android:layout_marginStart="@dimen/list_button_margin"
        android:layout_below="@id/playing_now_button"
        android:layout_toLeftOf="@id/list_disco_button"
        android:layout_toStartOf="@id/list_disco_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/country"/>

    <ImageView
        android:id="@+id/list_disco_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/list_button_margin"
        android:layout_marginStart="@dimen/list_button_margin"
        android:layout_below="@id/playing_now_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/disco"/>

    <ImageView
        android:id="@+id/list_pop_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/list_button_margin"
        android:layout_marginStart="@dimen/list_button_margin"
        android:layout_below="@id/playing_now_button"
        android:layout_toRightOf="@id/list_disco_button"
        android:layout_toEndOf="@id/list_disco_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/pop"/>

    <ImageView
        android:id="@+id/list_rock_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/list_button_margin"
        android:layout_marginStart="@dimen/list_button_margin"
        android:layout_below="@id/playing_now_button"
        android:layout_toRightOf="@id/list_pop_button"
        android:layout_toEndOf="@id/list_pop_button"
        tools:ignore="ContentDescription"
        android:src="@drawable/rock"/>


    <ListView
        android:id="@+id/list"
        style="@style/PagesStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/list_classical_button"
        android:orientation="vertical"
        android:padding="@dimen/default_padding" />
</RelativeLayout>
